<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="library_book_rule_user" model="ir.rule">
            <field name="name">Library users can only view own books</field>
            <field name="model_id" ref="model_library_book"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_library_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="library_book_rule_admin" model="ir.rule">
            <field name="name">Library administrators have full rights on books</field>
            <field name="model_id" ref="model_library_book"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_library_admin'))]"/>
        </record>

        <record id="group_library_trainee_author_edit" model="ir.rule">
            <field name="name">editing of the author by trainee</field>
            <field name="model_id" ref="school_lesson_6_2.model_library_author"/>
            <field name="domain_force">[('is_under_30_day', '=', True)]</field>
            <field name="groups" eval="[(4, ref('school_lesson_6_2.group_library_trainee'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>
